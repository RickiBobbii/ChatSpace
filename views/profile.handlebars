{{!-- added bg-cover to stop background from repeating at larger screens --}}
{{!-- wallapaper found from tailwind component --}}
<div
  class="flex min-h-screen items-center justify-center bg-[#292240] bg-[url(https://neluttu.github.io/pro-profile/wallpaper.jpg)] text-[#9e9cb6]"
>
  <section
    class="relative mx-2 w-3/5 max-w-lg overflow-hidden rounded-[6px] bg-[#231f39]/60 shadow-[0px_15px_39px_16px_rgba(52,45,91,0.65)] backdrop-blur-sm"
  >
    <h2
      class="my-3 text-center text-2xl uppercase text-slate-300"
    >{{username}}'s Page</h2>
    <div>
      {{!-- UX feature for blog list --}}
      {{#if currentUser}}
        <h2 class="my-5 text-center text-xl uppercase text-slate-300">Your
          Blogs:</h2>
      {{else}}
        <h2
          class="my-5 text-center text-xl uppercase text-slate-300"
        >Blogs:</h2>
      {{/if}}
      <div class="blogList">
        {{#if blogs.length}}
          {{#each blogs as |blog|}}
            <div class="flex justify-center">
              <div
                class="mb-2 flex w-11/12 items-center justify-between rounded-md border-2 border-slate-600 bg-slate-600 p-2"
              >
                <div>
                  <a href="/blog/{{blog.id}}">
                    <h4
                      class="mr-4 transform text-lg font-bold transition-all duration-200 hover:scale-105"
                    >{{blog.title}}</h4>
                  </a>
                  {{#if blog.tag}}
                    <p>Tag: <a href="/tag/{{blog.tag}}">{{blog.tag}}</a></p>
                  {{/if}}
                </div>
                {{#if isAuthor}}
                  <div>
                    <button
                      class="text-md rounded-sm bg-slate-400 p-2 text-sm font-bold text-slate-800 duration-300 hover:bg-indigo-200"
                      data-id="{{blog.id}}"
                    >DELETE</button></div>
                {{/if}}
              </div>
            </div>
          {{/each}}
        {{else}}
          <p class="p-4 text-center text-xl font-semibold text-red-300">It looks
            like you don't have any blogs!
            <br />
            Create a blog and add a tag to start joining chatrooms!</p>
        {{/if}}
      </div>
      {{#if currentUser}}
        <div class="my-4 flex items-center justify-center">
          <button
            type="submit"
            id="hide-btn"
            class="createNew text-md mt-2 rounded-sm bg-slate-400 p-3 font-bold text-slate-800 duration-300 hover:bg-indigo-200"
          >Create New Blog</button>
        </div>
      {{/if}}
    </div>

    <div class="bg-[#1e1a36]/70 p-4 text-sm font-semibold backdrop-blur-sm">
      <h3 class="text-2xl uppercase text-slate-300">{{username}}'s Blog Tags:</h3>
      {{! active joined chats }}
      {{#if blogs.length}}
        <ul
          class="mt-4 flex flex-wrap items-center justify-start gap-2 gap-y-3 [&>li:hover]:scale-105 [&>li:hover]:cursor-pointer [&>li]:rounded-[4px] [&>li]:border-2 [&>li]:border-[#2f2a47] [&>li]:px-3 [&>li]:py-1 [&>li]:transition-all [&>li]:duration-150 [&>li]:ease-in"
        >
          {{#each blogs as |blog|}}
            <li><a href="/tag/{{blog.tag}}">{{blog.tag}}</a></li>
          {{/each}}
        </ul>
      {{/if}}
    </div>
  </section>
</div>

{{! <script src="/js/blog.js"></script> }}