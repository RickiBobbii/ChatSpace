<div
  class="createBlogForm absolute my-5 hidden w-3/5 max-w-lg rounded-[6px] bg-[#231f39] p-6 shadow-[0px_15px_39px_16px_rgba(52,45,91,0.65)] backdrop-blur-sm"
  style="top: 25%;"
>
  <h3 class="my-2 text-center text-xl font-bold">Create a New Blog</h3>

  <form class="form newBlogForm">
    <div class="my-4 flex flex-col items-center gap-2">
      <label class="flex-nowrap font-bold" for="blogTitle">Blog Title:</label>
      <input
        class="bg-slate-0 my-2 w-11/12 rounded-md border-2 p-2 text-slate-800 focus:outline-none"
        type="text"
        id="blogTitle"
        name="blogTitle"
      />
    </div>
    <div class="mb-4 flex flex-col items-center gap-2">
      <label class="font-bold" for="blogContent">Content:</label>
      <textarea
        class="bg-slate-0 my-2 h-64 w-11/12 rounded-md border-2 p-2 text-slate-800 focus:outline-none"
        id="blogContent"
        name="blogContent"
      ></textarea>
    </div>
    <div class="mb-4 flex flex-col items-center gap-2">
      <label class="flex-nowrap font-bold" for="blogTitle">ChatRoom Tag:</label>
      <input
        class="bg-slate-0 mx-2 my-2 w-11/12 rounded-md border-2 p-2 text-slate-800 focus:outline-none"
        type="text"
        id="blogTag"
        name="blogTag"
      />
    </div>
    <div class="flex items-center justify-center">
      <button
        type="submit"
        class="text-md mt-2 rounded-sm bg-slate-400 p-3 font-bold text-slate-800 duration-300 hover:bg-indigo-200"
      >Post Blog!</button>
    </div>
  </form>
  <div class="mb-2 flex items-center justify-center">
    <button
      id="closeForm"
      class="text-md mt-1 rounded-sm bg-slate-400 p-2 font-bold text-slate-800 duration-300 hover:bg-indigo-200"
    >Exit</button>
  </div>
</div>

<script src="/js/blog.js"></script>