{{#each chatrooms as |chatroom|}}
  <div id="chat{{chatroom.id}}" class="hide">
    <h2 class="text-2xl">{{chatroom.title}}</h2>
    <div class="screen chat-screen">
      <div>
        <button class="delChat" data-id={{chatroom.id}}>Delete Chat</button>
      </div>
      <div class="messages">
      </div>
      <div class="typebox">
        <input type="text" id="message-input" />
        <button class="send-message">Send</button>
      </div>
    </div>
  </div>
{{/each}}

<script src="js/post.js"></script>