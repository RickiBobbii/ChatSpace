<div
  class="bg-[url(https://neluttu.github.io/pro-profile/wallpaper.jpg)] bg-[#292240] flex flex-col items-center justify-center min-h-screen text-[#9e9cb6]"
>
  <section
    class="w-full max-w-[430px] relative p-4 bg-[#231f39]/60 rounded-[6px] shadow-[0px_15px_39px_16px_rgba(52,45,91,0.65)] backdrop-blur-sm mx-2 overflow-hidden"
  >
    <h2 class="text-2xl text-slate-300 uppercase text-center mb-4">{{tag}}
      Blogs</h2>
    <div>
      {{#if blogs.length}}
        <div class="blogList">
          {{#each blogs as |blog|}}
            <div class="flex justify-center">
              <div
                class="flex justify-between items-center border-2 rounded-sm p-2 w-full bg-slate-600 border-slate-600 mb-2"
              >
                <div>
                  <a href="/blog/{{blog.id}}">
                    <h4
                      class="font-bold text-lg mr-8 duration-300 hover:text-indigo-400"
                    >{{blog.title}}</h4>
                  </a>
                  <p>Author:
                    <a
                      href="/user/{{user.username}}"
                      class="duration-300 hover:text-indigo-400"
                    >{{user.username}}</a></p>
                  {{#if blog.tag}}
                    <p>Tag:
                      <a
                      >{{blog.tag}}</a></p>
                  {{/if}}
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      {{/if}}
    </div>
  </section>
  <button
    class="flex justify-center font-bold text-sm rounded-sm mt-8 bg-slate-400 p-2 text-slate-800 duration-300 hover:bg-indigo-200"
  ><a id="goBack">Go Back</a></button>
</div>

<script src="/js/goBack.js"></script>