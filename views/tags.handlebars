<div
  class="flex min-h-screen flex-col items-center justify-center bg-[#292240] bg-[url(https://neluttu.github.io/pro-profile/wallpaper.jpg)] text-[#9e9cb6]"
>
  <section
    class="relative mx-2 w-full max-w-[430px] overflow-hidden rounded-[6px] bg-[#231f39]/60 p-4 shadow-[0px_15px_39px_16px_rgba(52,45,91,0.65)] backdrop-blur-sm"
  >
    <h2 class="mb-4 text-center text-2xl uppercase text-slate-300">{{tag}}
      Blogs</h2>
    <div>
      {{#if blogs.length}}
        <div class="blogList">
          {{#each blogs as |blog|}}
            <div class="flex justify-center">
              <div
                class="mb-2 flex w-full items-center justify-between rounded-sm border-2 border-slate-600 bg-slate-600 p-2"
              >
                <div>
                  <a href="/blog/{{blog.id}}">
                    <h4
                      class="mr-8 text-lg font-bold duration-300 hover:text-indigo-400"
                    >{{blog.title}}</h4>
                  </a>
                  <p>Author:
                    <a
                      href="/user/{{user.username}}"
                      class="duration-300 hover:text-indigo-400"
                    >{{user.username}}</a></p>
                  {{#if blog.tag}}
                    <p>Tag:
                      <a>{{blog.tag}}</a></p>
                  {{/if}}
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      {{/if}}
    </div>
  </section>
  <button
    id="goBack"
    class="mt-8 flex justify-center rounded-sm bg-slate-400 p-2 text-sm font-bold text-slate-800 duration-300 hover:bg-indigo-200"
  >Go Back</button>
</div>

<script src="/js/goBack.js"></script>