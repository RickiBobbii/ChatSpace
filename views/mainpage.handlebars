<div
  class="bg-[url(https://neluttu.github.io/pro-profile/wallpaper.jpg)] bg-[#292240] flex flex-col justify-center items-center h-full"
>
  <div
    class="bg-[#231f39]/60 rounded-[6px] shadow-[0px_15px_39px_16px_rgba(52,45,91,0.65)] backdrop-blur-xs my-4 px-6 overflow-hidden"
  >
    <h2
      class="my-3 text-2xl text-slate-300 uppercase font-semibold md:text-4xl"
    >Welcome {{username}}!</h2>

    <div class="flex justify-center items-center createNew">
      <button
        id="hide-btn"
        type="submit"
        class="mt-2 mb-8 font-bold text-md rounded-sm bg-slate-400 p-3 text-slate-800 duration-300 hover:bg-indigo-200"
      >Create New Blog</button>
    </div>
  </div>

  {{#if blogs.length}}
    <div
      class="blogList h-3/6 w-3/5 max-w-lg relative bg-[#231f39]/60 rounded-[6px] shadow-[0px_15px_39px_16px_rgba(52,45,91,0.65)] backdrop-blur-sm mx-2 overflow-scroll overflow-x-hidden"
    >
      <h3 class="text-center font-bold text-xl mb-3 py-3">Everyone's Blogs</h3>

      {{#each blogs as |blog|}}
        <div class="flex justify-center">
          <div
            class="flex justify-between items-center border-2 rounded-md p-2 ml-2 bg-slate-600 border-slate-600 mb-2 w-11/12"
          >
            <div>
              <a href="/blog/{{blog.id}}">
                <h4
                  class="font-bold text-lg duration-300 hover:text-indigo-400 mr-4"
                >{{blog.title}}</h4>
              </a>
              <p>Author:
                <a
                  href="/user/{{blog.user.username}}"
                  class="duration-300 hover:text-indigo-400"
                >{{blog.user.username}}</a></p>
              {{#if blog.tag}}
                <p>Tag:
                  <a
                    href="/tag/{{blog.tag}}"
                    class="duration-300 hover:text-indigo-400"
                  >{{blog.tag}}</a></p>
              {{/if}}
            </div>
            {{#if blog.userHasBlog}}
              <button
                class="font-bold text-sm rounded-sm bg-slate-400 p-2 text-slate-800 duration-300 hover:bg-indigo-200"
                data-id="{{blog.id}}"
              >DELETE</button>
            {{/if}}
          </div>
        </div>
      {{/each}}
    </div>
  {{/if}}
</div>

{{! <script src="/js/blog.js"></script> }}